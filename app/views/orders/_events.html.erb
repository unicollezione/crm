<div>
  <div class='mb-4'>
    <strong class='text-muted '>
      <%=
        I18n.t('orders.events', idx: @order.idx, count: @order.order_events.size)
      %>
    </strong>
  </div>

  <%- if @order.order_events.size.positive? %>
    <p>События</p>
    <%- @order.order_events.each do |event| %>
      <%= render(partial: 'orders/events/trello', locals: { event: event }) if event.event_source.eql?('notification') %>
      <%= render(partial: 'orders/events/payment_intent', locals: { event: event }) if event.event_source.eql?('payment_intent') %>
    <% end %>
  <% end %>
</div>
