<%= form_with(model: order, class: "form clearfix", url: orders_create_new_order_index_path) do |form| %>

  <%= render partial: 'shared/errors', locals: { errors: @errors }  %>

  <div class="form-group my-2">
    <%= form.text_field :idx,
      placeholder: "номер заказа",
      value: @idx,
      class: 'form-control' %>
  </div>

  <div class="form-group my-2">
    <%= form.text_area :notes,
      placeholder: "мерки",
      class: 'form-control' %>
  </div>

  <div class="form-group my-2">
    <%= form.text_area :comment,
      placeholder: "комментарий",
      class: 'form-control' %>
  </div>

  <%= render partial: 'workrooms', locals: { form: form, workrooms: @workrooms } %>

  <%= turbo_frame_tag :product do %>
    <%= render partial: 'product', locals: { form: form } %>
  <% end %>

  <%= turbo_frame_tag 'fabric' do %>
    <%= render partial: 'fabric', locals: { form: form } %>
  <% end %>

  <%= turbo_frame_tag 'customers' do %>
    <%= render partial: 'customers', locals: { form: form, customers: @customers } %>
  <% end %>
  <div class="form-group my-2">
    <%= form.submit "Сохранить", class: 'btn btn-primary' %>
  </div>
<% end %>
